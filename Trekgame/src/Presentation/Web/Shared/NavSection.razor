@* NavSection Component *@

<div class="nav-section">
    <h3 class="nav-section-title">@Title</h3>
    <div class="nav-section-items">
        @ChildContent
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
