    font-size: 12px;
    font-weight: 700;
    color: #000;
    letter-spacing: 2px;
    text-align: center;
}

.menu-nav {
    background: linear-gradient(180deg, var(--lcars-tan, #cc9966) 0%, var(--lcars-tan, #cc9966) 100%);
    padding: 4px;
    display: flex;
    flex-direction: column;
    gap: 4px;
    flex: 1;
}

.menu-nav-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 14px 16px;
    background: #000;
    border: none;
    border-radius: 0;
    font-family: var(--st-font-display);
    font-size: 13px;
    color: var(--lcars-orange, #ff9900);
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.15s;
    text-align: left;
}

.menu-nav-item:hover {
    background: rgba(255, 153, 0, 0.2);
}

.menu-nav-item.primary {
    background: var(--lcars-orange, #ff9900);
    color: #000;
}

.menu-nav-item.primary:hover {
    background: var(--lcars-gold, #ffcc00);
}

.nav-icon {
    font-size: 18px;
    width: 24px;
    text-align: center;
}

.nav-spacer {
    height: 20px;
    background: var(--lcars-purple, #cc99cc);
    margin: 8px 0;
}

.lcars-sidebar-footer {
    background: var(--lcars-peach, #ffcc99);
    padding: 10px;
    border-radius: 0 0 20px 20px;
    text-align: center;
}

.version {
    font-family: var(--st-font-display);
    font-size: 10px;
    color: #000;
}

/* Main Panel */
.menu-panel {
    flex: 1;
    background: rgba(0, 0, 0, 0.7);
    border: 2px solid var(--lcars-orange, #ff9900);
    border-radius: 0 30px 30px 0;
    overflow: hidden;
    position: relative;
}

.menu-panel::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 30px;
    background: linear-gradient(180deg, var(--lcars-orange, #ff9900) 0%, var(--lcars-tan, #cc9966) 50%, var(--lcars-peach, #ffcc99) 100%);
}

.panel-content {
    padding: 30px 30px 30px 60px;
    height: 100%;
}

.panel-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
}

.panel-header h2 {
    font-family: var(--st-font-display);
    font-size: 24px;
    color: var(--lcars-orange, #ff9900);
    letter-spacing: 3px;
    margin: 0;
}

.close-btn {
    width: 36px;
    height: 36px;
    background: var(--lcars-red, #cc6666);
    border: none;
    border-radius: 50%;
    color: #fff;
    font-size: 18px;
    cursor: pointer;
}

/* Welcome Panel */
.welcome-panel {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.starfleet-emblem {
    font-size: 80px;
    margin-bottom: 20px;
    animation: emblem-glow 3s ease-in-out infinite;
}

@@keyframes emblem-glow {
    0%, 100% { filter: drop-shadow(0 0 20px rgba(255, 153, 0, 0.5)); }
    50% { filter: drop-shadow(0 0 40px rgba(255, 153, 0, 0.8)); }
}

.welcome-panel h2 {
    font-family: var(--st-font-display);
    font-size: 28px;
    color: var(--lcars-orange, #ff9900);
    letter-spacing: 4px;
    margin: 0 0 16px;
}

.welcome-panel p {
    font-size: 14px;
    color: var(--lcars-peach, #ffcc99);
    max-width: 500px;
    line-height: 1.6;
}

.game-summary {
    margin-top: 30px;
    background: rgba(255, 153, 0, 0.1);
    border: 1px solid var(--lcars-orange, #ff9900);
    border-radius: 10px;
    padding: 20px;
    width: 100%;
    max-width: 400px;
}

.summary-header {
    font-family: var(--st-font-display);
    font-size: 12px;
    color: var(--lcars-lavender, #9999cc);
    letter-spacing: 2px;
    margin-bottom: 16px;
}

.summary-stats {
    display: flex;
    justify-content: space-around;
}

.stat {
    text-align: center;
}

.stat-label {
    display: block;
    font-size: 10px;
    color: var(--lcars-tan, #cc9966);
    letter-spacing: 1px;
    margin-bottom: 4px;
}

.stat-value {
    font-family: var(--st-font-display);
    font-size: 24px;
    color: var(--lcars-orange, #ff9900);
}

.quick-actions {
    display: flex;
    gap: 12px;
    margin-top: 30px;
}

.action-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: transparent;
    border: 1px solid var(--lcars-tan, #cc9966);
    border-radius: 20px;
    color: var(--lcars-tan, #cc9966);
    font-size: 12px;
    cursor: pointer;
    transition: all 0.15s;
}

.action-btn:hover {
    background: rgba(204, 153, 102, 0.2);
    border-color: var(--lcars-orange, #ff9900);
    color: var(--lcars-orange, #ff9900);
}

/* Faction Grid */
.faction-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
    max-height: 400px;
    overflow-y: auto;
}

