@page "/"
@page "/menu"
@page "/main-menu"
@layout StellarisLayout
@using MudBlazor
@using StarTrekGame.Web.Services
@using Blazored.LocalStorage
@inject IGameApiClient Api
@inject NavigationManager Navigation
@inject ILocalStorageService LocalStorage
@inject ISnackbar Snackbar

<PageTitle>TrekGame - The Final Strategy Frontier</PageTitle>

<div class="main-menu">
    <div class="menu-background">
        <div class="stars-layer"></div>
        <div class="nebula-layer"></div>
    </div>
    
    <div class="menu-content">
        <header class="menu-header">
            <div class="lcars-header">
                <div class="lcars-cap left">LCARS</div>
                <div class="lcars-bar">
                    <span class="lcars-segment orange"></span>
                    <span class="lcars-segment tan"></span>
                    <span class="lcars-segment peach"></span>
                </div>
                <div class="lcars-cap right">47</div>
            </div>
            <div class="game-title">
                <h1 class="trek-font">TrekGame</h1>
                <p class="subtitle">The Final Strategy Frontier</p>
                <p class="community-tag">A <span class="yot-highlight">YOT</span> Community Project</p>
            </div>
        </header>

        <main class="menu-main">
            <aside class="menu-sidebar">
                <div class="lcars-sidebar-cap">MAIN MENU</div>
                
                <nav class="menu-nav">
                    @if (_hasExistingGame)
                    {
                        <button class="menu-nav-item primary" @onclick="ContinueGame">
                            <span class="nav-icon">‚ñ∂</span>
                            <span class="nav-label">CONTINUE</span>
                        </button>
                    }
                    
                    <button class="menu-nav-item" @onclick="() => _showNewGame = true">
                        <span class="nav-icon">‚ú¶</span>
                        <span class="nav-label">NEW GAME</span>
                    </button>
                    
                    <button class="menu-nav-item" @onclick="GoToSaveLoad">
                        <span class="nav-icon">‚óâ</span>
                        <span class="nav-label">LOAD GAME</span>
                    </button>
                    
                    <div class="nav-spacer"></div>
                    
                    <button class="menu-nav-item" @onclick="GoToSettings">
                        <span class="nav-icon">‚öô</span>
                        <span class="nav-label">SETTINGS</span>
                    </button>
                    
                    <button class="menu-nav-item" @onclick="GoToTutorial">
                        <span class="nav-icon">?</span>
                        <span class="nav-label">TUTORIAL</span>
                    </button>
                    
                    <button class="menu-nav-item" @onclick="() => _showCredits = true">
                        <span class="nav-icon">‚òÖ</span>
                        <span class="nav-label">CREDITS</span>
                    </button>
                </nav>
            </aside>

            <section class="menu-panel">
                @if (_showNewGame)
                {
                    <div class="panel-content new-game-panel">
                        <div class="panel-header">
                            <h2>NEW MISSION</h2>
                            <button class="close-btn" @onclick="() => _showNewGame = false">‚úï</button>
                        </div>
                        
                        <div class="faction-grid">
                            @foreach (var faction in _factions)
                            {
                                <div class="faction-card @(faction.Id == _selectedFaction ? "selected" : "")" 
                                     @onclick="() => _selectedFaction = faction.Id">
                                    <div class="faction-emblem" style="background: @faction.Color;">
                                        <img src="images/emblems/@(faction.Id).svg" alt="@faction.Name" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';" />
                                        <span style="display:none;">@faction.Icon</span>
                                    </div>
                                    <div class="faction-info">
                                        <h3>@faction.Name</h3>
                                        <p>@faction.Description</p>
                                    </div>
                                    <div class="faction-traits">
                                        @foreach (var trait in faction.Traits)
                                        {
                                            <span class="trait">@trait</span>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <div class="panel-actions">
                            <button class="lcars-btn" @onclick="() => _showNewGame = false">CANCEL</button>
                            <button class="lcars-btn primary" @onclick="StartNewGame" disabled="@(_selectedFaction == null)">
                                ENGAGE
                            </button>
                        </div>
                    </div>
                }
                else if (_showCredits)
                {
                    <div class="panel-content credits-panel">
                        <div class="panel-header">
                            <h2>CREDITS</h2>
                            <button class="close-btn" @onclick="() => _showCredits = false">‚úï</button>
                        </div>
                        <div class="credits-content">
                            <div class="credit-section">
                                <h3 class="credit-heading">COMMUNITY</h3>
                                <p class="credit-line highlight"><span class="yot-badge">YOT</span> Yesterday or Tomorrow</p>
                                <p class="credit-line small">The community behind this project</p>
                            </div>
                            <div class="credit-divider"></div>
                            <div class="credit-section">
                                <h3 class="credit-heading">INSPIRED BY</h3>
                                <p class="credit-line">Star Trek‚Ñ¢ Universe</p>
                                <p class="credit-line">Birth of the Federation (1999)</p>
                                <p class="credit-line">Stellaris by Paradox Interactive</p>
                                <p class="credit-line">Star Trek: New Horizons Mod</p>
                            </div>
                            <div class="credit-divider"></div>
                            <div class="credit-section">
                                <p class="credit-line small">Star Trek and related marks are trademarks of CBS Studios Inc.</p>
                                <p class="credit-line small">This is a fan project for educational and entertainment purposes.</p>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="panel-content welcome-panel">
                        <div class="starfleet-emblem">üåü</div>
                        <h2>WELCOME, COMMANDER</h2>
                        <p>The galaxy awaits your leadership. Choose your path and shape the future of the Alpha Quadrant.</p>
                        
                        @if (_hasExistingGame && _currentGame != null)
                        {
                            <div class="game-summary">
                                <div class="summary-header">CURRENT MISSION</div>
                                <div class="summary-stats">
                                    <div class="stat">
                                        <span class="stat-label">STARDATE</span>
                                        <span class="stat-value">@_currentGame.Turn.ToString("0.00")</span>
                                    </div>
                                    <div class="stat">
                                        <span class="stat-label">FACTIONS</span>
                                        <span class="stat-value">@_currentGame.Factions.Count</span>
                                    </div>
                                    <div class="stat">
                                        <span class="stat-label">SYSTEMS</span>
                                        <span class="stat-value">@_currentGame.SystemCount</span>
                                    </div>
                                </div>
                            </div>
                        }
                        
                        <div class="quick-actions">
                            <button class="action-btn" @onclick="GoToAssets">
                                <span class="btn-icon">üé®</span>
                                <span>Asset Gallery</span>
                            </button>
                            <button class="action-btn" @onclick="GoToShowcase">
                                <span class="btn-icon">üñº</span>
                                <span>Showcase</span>
                            </button>
                        </div>
                    </div>
                }
            </section>
        </main>

        <footer class="menu-footer">
            <div class="lcars-footer-bar">
                <span class="footer-segment"></span>
                <span class="footer-text">UNITED FEDERATION OF PLANETS ‚Ä¢ STARFLEET COMMAND</span>
                <span class="footer-segment"></span>
            </div>
            <div class="version-info">
                <span class="version-number">v@GameVersion</span>
                <span class="version-name">"@VersionName"</span>
                <a href="docs/CHANGELOG.md" class="changelog-link">Changelog</a>
                <a href="docs/DOCUMENTATION.md" class="docs-link">Documentation</a>
            </div>
        </footer>
    </div>
</div>

<style>
/* Star Trek Style Font - Antonio is a good approximation */
@@import url('https://fonts.googleapis.com/css2?family=Antonio:wght@400;700&display=swap');

/* Main Menu Container */
.main-menu {
    min-height: 100vh;
    background: #000;
    position: relative;
    overflow: hidden;
}

/* Animated Background */
.menu-background {
    position: absolute;
    inset: 0;
    z-index: 0;
}

.stars-layer {
    position: absolute;
    inset: 0;
    background: 
        radial-gradient(1px 1px at 20px 30px, white, transparent),
        radial-gradient(1px 1px at 40px 70px, rgba(255,255,255,0.8), transparent),
        radial-gradient(1px 1px at 90px 40px, rgba(255,255,255,0.6), transparent),
        radial-gradient(2px 2px at 160px 120px, white, transparent),
        radial-gradient(1px 1px at 230px 80px, rgba(255,255,255,0.7), transparent);
    background-size: 300px 200px;
    animation: stars-drift 60s linear infinite;
}

.nebula-layer {
    position: absolute;
    inset: 0;
    background: 
        radial-gradient(ellipse at 20% 50%, rgba(100, 50, 150, 0.15) 0%, transparent 50%),
        radial-gradient(ellipse at 80% 30%, rgba(50, 100, 150, 0.1) 0%, transparent 40%),
        radial-gradient(ellipse at 50% 80%, rgba(150, 100, 50, 0.08) 0%, transparent 45%);
    animation: nebula-pulse 20s ease-in-out infinite;
}

@@keyframes stars-drift {
    from { background-position: 0 0; }
    to { background-position: 600px 400px; }
}

@@keyframes nebula-pulse {
    0%, 100% { opacity: 0.6; }
    50% { opacity: 1; }
}

/* Content Layout */
.menu-content {
    position: relative;
    z-index: 1;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}

/* LCARS Header */
.menu-header {
    padding: 20px 40px;
}

.lcars-header {
    display: flex;
    align-items: center;
    height: 40px;
    margin-bottom: 20px;
}

.lcars-cap {
    background: var(--lcars-orange, #ff9900);
    padding: 8px 20px;
    font-family: var(--st-font-display);
    font-size: 14px;
    font-weight: 700;
    color: #000;
}

.lcars-cap.left { border-radius: 20px 0 0 20px; }
.lcars-cap.right { border-radius: 0 20px 20px 0; }

.lcars-bar {
    flex: 1;
    display: flex;
    height: 100%;
}

.lcars-segment {
    flex: 1;
    margin: 0 2px;
}

.lcars-segment.orange { background: var(--lcars-orange, #ff9900); }
.lcars-segment.tan { background: var(--lcars-tan, #cc9966); }
.lcars-segment.peach { background: var(--lcars-peach, #ffcc99); }

.game-title {
    text-align: center;
}

.game-title h1 {
    font-family: 'Federation', 'Antonio', var(--st-font-display), sans-serif;
    font-size: 56px;
    font-weight: 700;
    color: var(--lcars-orange, #ff9900);
    letter-spacing: 6px;
    margin: 0;
    text-shadow: 0 0 30px rgba(255, 153, 0, 0.5), 0 0 60px rgba(255, 153, 0, 0.3);
    text-transform: uppercase;
}

.game-title h1.trek-font {
    font-family: 'Federation', 'Trek', 'Antonio', var(--st-font-display), sans-serif;
    font-style: italic;
    letter-spacing: 4px;
}

.game-title .subtitle {
    font-family: var(--st-font-display);
    font-size: 16px;
    color: var(--lcars-peach, #ffcc99);
    letter-spacing: 6px;
    margin-top: 8px;
    text-transform: uppercase;
}

.game-title .community-tag {
    font-family: var(--st-font-body);
    font-size: 12px;
    color: var(--lcars-lavender, #cc99ff);
    letter-spacing: 2px;
    margin-top: 12px;
