.version-name {
    color: var(--lcars-peach, #ffcc99);
    font-style: italic;
}

.changelog-link,
.docs-link {
    color: var(--lcars-blue, #99ccff);
    text-decoration: none;
    padding: 4px 12px;
    border: 1px solid var(--lcars-blue, #99ccff);
    border-radius: 12px;
    transition: all 0.2s;
}

.changelog-link:hover,
.docs-link:hover {
    background: rgba(153, 204, 255, 0.2);
    color: #fff;
}
</style>

@code {
    private const string GameVersion = "1.43.64";
    private const string VersionName = "Building Blocks";
    
    private bool _showNewGame = false;
    private void GoToSaveLoad() => Navigation.NavigateTo("/game/save-load");
    private void GoToSettings() => Navigation.NavigateTo("/game/settings");
    private void GoToTutorial() => Navigation.NavigateTo("/game/tutorial");
    private void GoToGalaxy() => Navigation.NavigateTo("/game/galaxy");
