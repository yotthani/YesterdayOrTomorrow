}

.game-title .yot-highlight {
    color: #ffcc00;
    font-weight: 700;
    text-shadow: 0 0 10px rgba(255, 204, 0, 0.5);
}

/* Main Area */
.menu-main {
    flex: 1;
    display: flex;
    padding: 0 40px 40px;
    gap: 30px;
}

/* Sidebar */
.menu-sidebar {
    width: 220px;
    display: flex;
    flex-direction: column;
}

.lcars-sidebar-cap {
    background: var(--lcars-orange, #ff9900);
    padding: 12px 20px;
    border-radius: 20px 20px 0 0;
