@page "/game/situation"
@layout StellarisLayout
@using StarTrekGame.Web.Services
@inject NavigationManager Navigation

<PageTitle>Situation Log - Galactic Strategy</PageTitle>

<div class="stellaris-layout">
    <header class="st-topbar">
        <div class="st-empire-badge"><div class="st-empire-flag">üåê</div><div class="st-empire-info"><span class="st-empire-name">Situation Log</span></div></div>
        <div class="st-game-controls"><button class="st-end-turn-btn" @onclick="GoBack">‚Üê BACK</button></div>
    </header>
    <div class="st-main">
        <aside class="st-sidebar-left">
            <nav class="st-nav">
                <a href="/game/galaxy" class="st-nav-btn"><span class="st-nav-icon">üåå</span><span class="st-nav-label">Galaxy</span></a>
                <a href="/game/situation" class="st-nav-btn active"><span class="st-nav-icon">üìã</span><span class="st-nav-label">Situation</span></a>
            </nav>
        </aside>
        <div class="situation-content">
            <h1>SITUATION LOG</h1>
            <p>Active events and ongoing situations in your empire.</p>
            
            <div class="situation-list">
                <div class="situation-item info">
                    <div class="situation-icon">‚ÑπÔ∏è</div>
                    <div class="situation-info">
                        <h3>First Contact Protocol</h3>
                        <p>Your explorers have encountered a new species. Diplomatic options are available.</p>
                        <span class="situation-time">Turn 5</span>
                    </div>
                </div>
                <div class="situation-item warning">
                    <div class="situation-icon">‚ö†Ô∏è</div>
                    <div class="situation-info">
                        <h3>Border Tensions</h3>
                        <p>Klingon Empire ships have been spotted near your border colonies.</p>
                        <span class="situation-time">Turn 3</span>
                    </div>
                </div>
                <div class="situation-item success">
                    <div class="situation-icon">‚úÖ</div>
                    <div class="situation-info">
                        <h3>Research Breakthrough</h3>
                        <p>Your scientists have completed Warp Field Theory research.</p>
                        <span class="situation-time">Turn 2</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.situation-content { flex: 1; padding: 24px; background: linear-gradient(180deg, #080c14, #040608); }
.situation-content h1 { font-family: var(--st-font-display); font-size: 24px; color: #ff9900; letter-spacing: 3px; margin-bottom: 16px; }
.situation-content p { color: #a8c0d8; margin-bottom: 24px; }
.situation-list { display: flex; flex-direction: column; gap: 12px; }
.situation-item { display: flex; gap: 16px; padding: 16px; background: rgba(20, 30, 45, 0.9); border: 1px solid rgba(60, 90, 130, 0.5); border-radius: 8px; border-left: 4px solid #4a9eff; }
.situation-item.warning { border-left-color: #ffaa00; }
.situation-item.success { border-left-color: #44dd66; }
.situation-icon { font-size: 24px; }
.situation-info h3 { font-family: var(--st-font-display); font-size: 14px; color: #fff; margin-bottom: 6px; }
.situation-info p { font-size: 12px; color: #a8c0d8; margin-bottom: 8px; }
.situation-time { font-size: 10px; color: #7890a8; }
</style>

@code {
    private void GoBack() => Navigation.NavigateTo("/game/galaxy");
}
