@page "/game/victory"
@inject HttpClient Http
@inject NavigationManager Nav

<div class="victory-screen @GetFactionClass()">
    <div class="victory-header">
        <h1>üèÜ Victory Conditions</h1>
        <button class="btn-back" @onclick="GoBack">‚Üê Back</button>
    </div>

    @if (_loading)
    {
        <div class="loading">Analyzing victory progress...</div>
    }
    else
    {
        <div class="victory-content">
            <!-- Current Status -->
            <div class="status-panel">
                <h2>Empire Status</h2>
                <div class="status-grid">
                    <div class="status-item">
                        <span class="label">Turn</span>
                        <span class="value">@_gameStatus?.CurrentTurn</span>
                    </div>
                    <div class="status-item">
                        <span class="label">Score</span>
                        <span class="value">@_gameStatus?.TotalScore</span>
                    </div>
                    <div class="status-item">
                        <span class="label">Rank</span>
                        <span class="value rank-@_gameStatus?.Rank">@GetRankText(_gameStatus?.Rank ?? 1)</span>
                    </div>
                </div>
            </div>

            <!-- Victory Conditions -->
            <div class="conditions-panel">
                @foreach (var condition in _victoryConditions)
                {
                    <div class="condition-card @(condition.IsAchieved ? "achieved" : "") @(condition.IsEnabled ? "" : "disabled")">
                        <div class="condition-header">
                            <div class="condition-icon">@GetConditionIcon(condition.Type)</div>
                            <div class="condition-info">
                                <h3>@condition.Name</h3>
                                <p>@condition.Description</p>
                            </div>
                            @if (condition.IsAchieved)
                            {
                                <div class="achieved-badge">‚úÖ ACHIEVED</div>
                            }
                        </div>

                        <div class="condition-progress">
                            @foreach (var req in condition.Requirements)
                            {
                                <div class="requirement @(req.IsMet ? "met" : "")">
                                    <span class="req-name">@req.Name</span>
                                    <div class="req-bar">
                                        <div class="bar-fill" style="width: @req.PercentComplete%"></div>
                                    </div>
                                    <span class="req-progress">@req.Current / @req.Target</span>
                                    @if (req.IsMet)
                                    {
                                        <span class="check">‚úì</span>
                                    }
                                </div>
                            }
                        </div>

                        @if (!condition.IsEnabled)
                        {
                            <div class="disabled-overlay">
                                <span>Disabled in game settings</span>
                            </div>
                        }
                    </div>
                }
            </div>

            <!-- Score Breakdown -->
            <div class="score-panel">
                <h2>Score Breakdown</h2>
                <div class="score-categories">
                    @foreach (var category in _scoreBreakdown)
                    {
                        <div class="score-category">
                            <span class="cat-icon">@category.Icon</span>
                            <span class="cat-name">@category.Name</span>
                            <div class="cat-bar">
                                <div class="bar-fill" style="width: @category.Percentage%"></div>
                            </div>
                            <span class="cat-score">@category.Score</span>
                        </div>
                    }
                </div>
                <div class="total-score">
                    <span>Total Score:</span>
                    <span class="total">@_gameStatus?.TotalScore</span>
                </div>
            </div>

            <!-- Faction Comparison -->
            <div class="comparison-panel">
                <h2>Faction Comparison</h2>
                <div class="faction-list">
                    @foreach (var faction in _factionScores.OrderByDescending(f => f.Score))
                    {
                        <div class="faction-row @(faction.IsPlayer ? "player" : "") @(faction.IsDefeated ? "defeated" : "")">
                            <span class="faction-rank">#@faction.Rank</span>
                            <span class="faction-name">@faction.Name</span>
                            <div class="faction-bar">
                                <div class="bar-fill" style="width: @faction.ScorePercent%"></div>
                            </div>
                            <span class="faction-score">@faction.Score</span>
                            @if (faction.IsDefeated)
                            {
                                <span class="defeated-badge">‚ò†Ô∏è</span>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Crisis Alert -->
            @if (_crisisActive)
            {
                <div class="crisis-panel">
                    <div class="crisis-alert">
                        <span class="crisis-icon">‚ö†Ô∏è</span>
                        <div class="crisis-info">
                            <h3>@_crisisReport?.Name</h3>
                            <p>Phase @_crisisReport?.Phase - @_crisisReport?.CurrentEscalation</p>
                            <p class="victory-cond">Victory: @_crisisReport?.VictoryCondition</p>
                        </div>
                        <div class="crisis-stats">
                            <div class="stat">
                                <span>Enemy Fleets</span>
                                <span class="value">@_crisisReport?.EnemyFleets</span>
                            </div>
                            <div class="stat">
                                <span>Systems Lost</span>
                                <span class="value">@_crisisReport?.SystemsLost</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

