{
  "id": "dominion",
  "name": "The Dominion",
  "description": "Dominion Founders' interface system - organic and controlled",
  "faction": "dominion",
  "fonts": {
    "primary": {
      "family": "Dominion",
      "fallback": "Optima, Candara, sans-serif",
      "file": "fonts/dominion.ttf",
      "weight": "normal",
      "letterSpacing": "0.06em"
    },
    "secondary": {
      "family": "Dominion Text",
      "fallback": "Segoe UI, Calibri, sans-serif",
      "file": "fonts/dominion-text.ttf",
      "weight": "normal",
      "letterSpacing": "0.03em"
    },
    "display": {
      "family": "Dominion Script",
      "fallback": "Dominion, Optima, sans-serif",
      "file": "fonts/dominion-script.ttf",
