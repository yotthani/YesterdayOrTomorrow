  "colors": {
    "primary": "#6A3A8A",
    "secondary": "#4A2A5A",
    "accent": "#D4A030",
    "highlight": "#E8C060",
    "alert": "#AA4488",
    "success": "#8A6AAA",
    "background": "#120a18",
    "text": "#C8A8D8",
    "textDark": "#2A1A3A",
    "founderGold": "#C89030",
