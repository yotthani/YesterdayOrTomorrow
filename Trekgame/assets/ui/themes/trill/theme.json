{
  "id": "trill",
  "name": "Trill Symbiosis Commission",
  "description": "Trill interface system inspired by symbiont connection and organic forms",
  "faction": "trill",
  "fonts": {
    "primary": {
      "family": "Trill Elegant",
      "fallback": "Palatino, Georgia, serif",
      "file": "fonts/trill-elegant.ttf",
      "weight": "normal",
      "letterSpacing": "0.03em",
      "textTransform": "none"
    },
    "secondary": {
      "family": "Trill Script",
      "fallback": "Brush Script MT, cursive",
      "file": "fonts/trill-script.ttf",
      "weight": "normal",
      "letterSpacing": "0.02em"
    },
    "display": {
      "family": "Trill Spots",
      "fallback": "Palatino, Georgia, serif",
      "file": "fonts/trill-spots.ttf",
      "weight": "bold",
      "letterSpacing": "0.04em",
      "comment": "Decorative font featuring spot-like patterns for headers"
    }
  },
  "colors": {
    "primary": "#55AAAA",
    "secondary": "#3D8080",
    "accent": "#DDCCAA",
    "highlight": "#88DDDD",
    "alert": "#FFAA66",
    "success": "#77CCAA",
    "background": "#0A1212",
    "text": "#DDCCAA",
    "textDark": "#0A1212"
  },
  "styles": {
    "cornerRadius": "organic",
    "borderStyle": "flowing",
    "animationStyle": "gentle"
  }
}
