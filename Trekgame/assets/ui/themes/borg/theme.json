  "fonts": {
    "primary": {
      "family": "Borg",
      "fallback": "Consolas, Courier New, monospace",
      "file": "fonts/borg.ttf",
      "weight": "normal",
      "letterSpacing": "0.1em",
      "textTransform": "uppercase"
    },
    "secondary": {
